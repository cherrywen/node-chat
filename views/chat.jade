doctype
html(lang="zh")
  head
    title=title
    link(href="/css/common.css",rel="stylesheet",type="text/css")
    link(href="/css/chat.css",rel="stylesheet",type="text/css")
  body
    .wrapper
      .header
      .main
        .container
          .left
            .middleForm
              .formHead
                label 在线成员
              .formRow.H600#showUsers
          .right
            .middleForm.chatForm#all
              .formHead
                label#chatName 群聊
              .H500#chat
                .formRow.H550#chatInformation
                .formRow.H50#sendEnformation
                  input#chatMsg(type="text",placeholder="请输入聊天内容",style="width=15px")
                  span
                    .btn#sendMsg 发送
        .loginForm
          .middleForm
              .formHead
                label 设置聊天昵称
              .formRow.marginT15
                label 昵称:
                input#userName(type="text")
              .formBtn
                .setUser.btn.leftAlign 确定
      .fade
    script(src="/js/jquery/jquery-2.1.3.min.js",type="text/javascript")
    script(src="/js/underscore/underscore-1.8.2.min.js",type="text/javascript")
    script(src="https://cdn.socket.io/socket.io-1.2.1.js",type="text/javascript")
    script(src="/js/chat/chat.min.js",type="text/javascript")